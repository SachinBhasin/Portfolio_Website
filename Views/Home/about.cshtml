@{
    ViewData["Title"] = "About";
}

@section Styles {
    <link rel="stylesheet" href="~/css/about.css">
}

<main class="page-container wide">
    <section class="content-tile glass-tile">
        <h1 class="page-title">My <span>Story</span></h1>
        <p class="page-subtitle">The journey so far</p>
        <div class="bio-intro">
            <div class="bio-text">
                <p>I'm a self-taught photographer with a Computer Science degree. I started as the school photographer in Doha, Qatar before moving to the UK in 2015. Photography remained a hobby until track days with friends sparked my passion for motorsport and nature photography.</p>
                <p>Below is a timeline from my photography journey. Click the buttons to view Flickr albums from these events.</p>
            </div>
            <div class="bio-stats">
                <div class="bio-stat">
                    <span class="bio-stat-label">Est.</span>
                    <span class="bio-stat-value">2017</span>
                </div>
                <div class="bio-stat-divider"></div>
                <div class="bio-stat">
                    <span class="bio-stat-label">Current Camera</span>
                    <span class="bio-stat-value">D300S</span>
                </div>
            </div>
        </div>
        <div class="zigzag-timeline" id="zigzagTimeline">
        </div>
    </section>

    <footer class="footer-tile glass-tile">
        <div class="footer-brand">Sachin <span>Bhasin</span></div>
        <div class="footer-links">
            <a asp-controller="Home" asp-action="index">Home</a>
            <a asp-controller="Home" asp-action="about">About</a>
            <a asp-controller="Home" asp-action="collections">Collections</a>
            <a asp-controller="Home" asp-action="recipes">Recipes</a>
            <a asp-controller="Home" asp-action="blog">Blog</a>
            <a href="https://www.flickr.com/photos/204067982@N08/" target="_blank">Flickr</a>
        </div>
        <p class="footer-copyright">Â© @DateTime.UtcNow.Year Sachin Bhasin. All rights reserved.</p>
    </footer>
</main>

@section Scripts {
    <script src="~/js/about.js"></script>
}
