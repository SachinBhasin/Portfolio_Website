    <script>
        // Calculate relative time (e.g., "2 days ago", "1 week ago")
        function getRelativeTime(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diffMs = now - date;
            const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
            
            if (diffDays === 0) return 'Today';
            if (diffDays === 1) return 'Yesterday';
            if (diffDays < 7) return `${diffDays} days ago`;
            if (diffDays < 14) return '1 week ago';
            if (diffDays < 30) return `${Math.floor(diffDays / 7)} weeks ago`;
            if (diffDays < 60) return '1 month ago';
            if (diffDays < 365) return `${Math.floor(diffDays / 30)} months ago`;
            if (diffDays < 730) return '1 year ago';
            return `${Math.floor(diffDays / 365)} years ago`;
        }
        
        // Apply relative dates to activity items
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.activity-item[data-date]').forEach(item => {
                const dateSpan = item.querySelector('.activity-date');
                const date = item.getAttribute('data-date');
                if (dateSpan && date) {
                    dateSpan.textContent = getRelativeTime(date);
                }
            });
        });
    </script>

