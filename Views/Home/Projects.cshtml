@{
    ViewData["Title"] = "Projects";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/projects.css" />
</head>
<body>
    <header>
        <div class="nav-title">
            <span class="my">My</span>
            <div class="nav-dropdown">
                <span class="nav-current">Projects</span>
                <div class="nav-dropdown-menu">
                    <a asp-controller="Home" asp-action="Index">My Life</a>
                    <a asp-controller="Home" asp-action="Story">My Story</a>
                    <a asp-controller="Home" asp-action="Hobbies">My Hobbies</a>
                    <a asp-controller="Home" asp-action="Kitchen">My Kitchen</a>
                    <a asp-controller="Home" asp-action="Blog">My Blog</a>
                    <a asp-controller="Home" asp-action="Projects" class="active">My Projects</a>
                    <a href="https://www.etsy.com/shop/SachinOptics" target="_blank">My Shop ↗</a>
                </div>
            </div>
        </div>
        <a asp-controller="Home" asp-action="Blog" class="blog-btn"><span>Read My Blog</span></a>
    </header>

    <section class="page-hero">
        <div class="page-hero-content">
            <p class="page-label">Work & Experiments</p>
            <h1 class="page-title">My <span>Projects</span></h1>
            <p class="page-intro">A blend of photography work, creative experiments, and side projects that showcase what I can do—and where I'm heading.</p>
        </div>
    </section>

    <section class="projects-section">

        <div class="project-feature">
            <div class="project-visual">
                <div class="project-carousel" id="shopCarousel">
                    <img src="https://live.staticflickr.com/65535/55011792536_caeeb37852_b.jpg" alt="Shop Image 1 - Highland Cow" class="active">
                    <img src="https://live.staticflickr.com/65535/55012048159_02c57d8ebf_b.jpg" alt="Shop Image 2 - Black and Chestnut Eagle">
                    <img src="https://live.staticflickr.com/65535/55011861521_6db58c0312_b.jpg" alt="Shop Image 3 - Whitby Pier">
                    <img src="https://live.staticflickr.com/65535/55019449743_bb03def5d3_b.jpg" alt="Shop Image 4 - Edinburgh Zoo Monkey">
                </div>
            </div>
            <div class="project-content">
                <span class="project-type">E-Commerce</span>
                <h2 class="project-title">Sachin <span>Optics</span></h2>
                <p class="project-desc">My photography shop on Etsy where I sell prints, digital downloads, and other photography bits. This is where I'm testing the waters—seeing if people connect with what I capture through the lens. Every purchase helps fund the next camera upgrade, the next race weekend, or the next nature walk with my camera.</p>
                <div class="project-tech">
                    <span class="tech-tag">Photography</span>
                    <span class="tech-tag">Prints/Posters</span>
                    <span class="tech-tag">Postcards</span>
                </div>
                <a href="https://www.etsy.com/shop/SachinOptics" target="_blank" class="project-link">View Shop</a>
            </div>
        </div>

        <div class="project-feature">
            <div class="project-visual">Coming Soon™</div>
            <div class="project-content">
                <span class="project-type">Coming Soon™</span>
                <h2 class="project-title">Coming <span>Soon™</span></h2>
                <p class="project-desc"></p>
                <div class="project-tech">
                    <span class="tech-tag">Tag Unavailable</span>
                </div>
                <span class="project-link" style="opacity: 0.5; cursor: default;">Coming Soon</span>
            </div>
        </div>

    </section>

